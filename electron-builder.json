{
  "productName": "Altitude - Metrix Wallet",
  "directories": {
    "output": "release/"
  },
  "files": [
    "**/*",
    "!**/*.ts",
    "!*.code-workspace",
    "!LICENSE.md",
    "!package.json",
    "!package-lock.json",
    "!src/",
    "!e2e/",
    "!hooks/",
    "!angular.json",
    "!_config.yml",
    "!karma.conf.js",
    "!tsconfig.json",
    "!tslint.json"
  ],
  "win": {
    "icon": "assets/icons/win/icon.ico",
    "artifactName": "${productName}-win32.${ext}",
    "target": [
      "nsis"
    ],
    "legalTrademarks": "Copyright Â© 2020 Metrix",
    "publisherName": "Metrix"
  },
  "nsis": {
    "runAfterFinish": true,
    "oneClick": false,
    "allowToChangeInstallationDirectory": true
  },
  "mac": {
    "icon": "assets/icons/mac/icon.icns",
    "artifactName": "${productName}-mac-x64.${ext}",
    "target": [
      "dmg"
    ],
    "category": "public.app-category.utilities"
  },
  "linux": {
    "icon": "assets/icons/png",
    "artifactName": "${productName}-linux-x64.${ext}",
    "target": [
      "AppImage"
    ],
    "category": "Utility"
  }
}