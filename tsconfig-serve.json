{
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    //"esModuleInterop": true,
    //"allowSyntheticDefaultImports": true,
    //"allowJs": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "module": "CommonJS",
    "target": "ES2022",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "es2016",
      "es2015",
      "dom"
    ]
  },
  "include": [
    "main.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}